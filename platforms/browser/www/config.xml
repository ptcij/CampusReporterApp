<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.CampusReporter" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Campus Reporter</name>
    <description>
        An app to help campus reporters tell stories.
    </description>
    <author email="info@ptcij.org" href="http://ptcij.org">PTCIJ</author>
    <content src="index.html" />
    <access origin="*" />
    <access launch-external="yes" origin="mailto:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="Orientation" value="portrait" />
</widget>
